    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/ring_progress_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ProgressBar
            android:id="@+id/ring_1"
            style="@style/AppTheme.RingProgressBar.Tone1"
            android:layout_width="@dimen/ring_tone_1_size"
            android:layout_height="@dimen/ring_tone_1_size"
            android:tag="binding_1"                  
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="50" />

        <ProgressBar
            android:id="@+id/ring_2"
            style="@style/AppTheme.RingProgressBar.Tone2"
            android:layout_width="@dimen/ring_tone_2_size"
            android:layout_height="@dimen/ring_tone_2_size"
            android:tag="binding_2"                  
                                                                               
            app:layout_constraintBottom_toBottomOf="@id/ring_1"
            app:layout_constraintLeft_toLeftOf="@id/ring_1"
            app:layout_constraintRight_toRightOf="@id/ring_1"
            app:layout_constraintTop_toTopOf="@id/ring_1"
            tools:progress="50"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/value_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:tag="binding_3"           
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/ring_progress_progress_tone_1"
            android:textSize="@dimen/ring_progress_label"
            app:layout_constraintBottom_toTopOf="@id/value_2"
            app:layout_constraintEnd_toEndOf="@id/ring_1"
            app:layout_constraintStart_toStartOf="@id/ring_1"
            app:layout_constraintTop_toTopOf="@id/ring_1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="-2000 dB" />

        <TextView
            android:id="@+id/value_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:tag="binding_4"           
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/ring_progress_progress_tone_2"
            android:textSize="@dimen/ring_progress_label"
                                                                          
            app:layout_constraintBottom_toBottomOf="@id/ring_1"
            app:layout_constraintEnd_toEndOf="@id/ring_1"
            app:layout_constraintStart_toStartOf="@id/ring_1"
            app:layout_constraintTop_toBottomOf="@id/value_1"
            tools:text="-2000 dB"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/rings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_5"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/ring_progress_label"
            android:textSize="@dimen/ring_progress_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ring_1"
            app:layout_constraintStart_toStartOf="@+id/ring_1"
            app:layout_constraintTop_toBottomOf="@+id/ring_1"
            tools:text="right" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         