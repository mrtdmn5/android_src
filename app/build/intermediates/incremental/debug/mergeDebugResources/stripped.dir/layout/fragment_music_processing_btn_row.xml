<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/no_margin"
        android:layout_marginEnd="@dimen/default_margin_half"
        android:layout_weight="1"
        android:backgroundTint="@color/preset_background_color"
        android:singleLine="true"
        android:textColor="@color/preset_text_color" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_half"
        android:layout_marginEnd="@dimen/default_margin_half"
        android:layout_weight="1"
        android:backgroundTint="@color/preset_background_color"
        android:singleLine="true"
        android:textColor="@color/preset_text_color" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_half"
        android:layout_marginEnd="@dimen/no_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/preset_background_color"
        android:singleLine="true"
        android:textColor="@color/preset_text_color" />

</LinearLayout>
