    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_statistics_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/statistics_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:backgroundTint="@color/statistics_action_button_background_color_selector"
            android:text="@string/statistic_category_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/statistic_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/default_margin_half"
            android:tag="binding_1"                                             
            app:layout_constraintBottom_toTopOf="@id/statistics_action_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/empty_list_message_id"
            layout="@layout/no_data_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/default_margin_half"
                                                                                
            app:layout_constraintBottom_toBottomOf="@id/statistic_list"
            app:layout_constraintEnd_toEndOf="@id/statistic_list"
            app:layout_constraintStart_toStartOf="@id/statistic_list"
            app:layout_constraintTop_toTopOf="@id/statistic_list"
                                     />

    </androidx.constraintlayout.widget.ConstraintLayout>

         