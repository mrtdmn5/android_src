    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/gesture_item_0"                             
        android:minHeight="@dimen/height_list_item_min"
        android:orientation="horizontal"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="@dimen/width_gesture_image"
            android:layout_height="@dimen/height_gesture_image"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_half"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:tag="binding_1"                                         
            android:src="@drawable/ic_tap"
                                                                                         
                                                            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_margin_half"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gesture_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/no_margin"
                android:tag="binding_2"       
                android:textAppearance="?android:attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/gesture_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/no_margin"
                android:singleLine="false"
                android:tag="binding_3"          
                android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                android:textColor="?android:attr/textColorSecondary"
                                                                                           />

        </LinearLayout>

    </LinearLayout>

         