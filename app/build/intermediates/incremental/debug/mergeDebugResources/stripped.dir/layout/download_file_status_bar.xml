    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/download_file_status_bar_background"
        android:minHeight="@dimen/height_list_item_min"
        android:paddingHorizontal="@dimen/default_margin_one_and_half"
        android:paddingVertical="@dimen/default_margin_double"
        android:tag="layout/download_file_status_bar_0"                                xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/no_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/default_margin_one_and_half"
            android:maxLines="2"
            android:tag="binding_1"                   
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin_double"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_2"                          
                                                                                                  
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/content"
            style="@style/AppTheme.Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/no_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_3"                     
                                                                                                                                         
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/refs"
            style="@style/AppTheme.Text.Refs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_4"                                                       
                                                                                                                                   
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <Button
            android:id="@+id/secondary_action"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_5"                                                           
                                                                        
                                                                                                           
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/refs" />

        <Button
            android:id="@+id/primary_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_6"                                                         
                                                                      
                                                                                                         
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/refs" />

        <!-- marginEnd not applied ==> workaround by using of a bigger width and paddingEnd -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/download_file_progress_image_size_width"
            android:layout_height="@dimen/download_file_progress_image_size_height"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/no_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:tag="binding_7"                                                                                                                           
            android:paddingStart="@dimen/no_margin"
            android:paddingEnd="@dimen/default_margin_one_and_half"
                                                                                                           
                                                                                                                     
            app:layout_constraintBottom_toTopOf="@id/primary_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintVertical_bias="0.1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         