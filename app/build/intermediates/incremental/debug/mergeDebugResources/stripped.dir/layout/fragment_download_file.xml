    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/fragment_download_file_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">

                <include
                    android:id="@+id/status_bar"
                    layout="@layout/download_file_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                                 />

                <include
                    android:id="@+id/content_view"
                    layout="@layout/download_file_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                                                 />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:tag="binding_2"                            
            android:text="@string/button_download"
                                                                                          />

    </LinearLayout>

         