<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Default visibility, enabled mode and summary are override by DownloadSettingsViewData -->

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_download_category_device">

        <Preference
            app:enabled="false"
            app:iconSpaceReserved="false"
            app:key="@string/settings_id_download_application_version"
            app:selectable="false"
            app:summary="@string/settings_download_application_not_available"
            app:title="@string/settings_download_application_version_title" />

        <Preference
            app:enabled="false"
            app:iconSpaceReserved="false"
            app:key="@string/settings_id_download_application_build_id"
            app:selectable="false"
            app:summary="@string/settings_download_application_not_available"
            app:title="@string/settings_download_application_build_id_title" />

        <EditTextPreference
            app:iconSpaceReserved="false"
            app:dialogTitle="@string/settings_download_hardware_version_dialog_title"
            app:key="@string/settings_id_download_hardware_version"
            app:title="@string/settings_download_hardware_version_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_download_category_filters">

        <com.qualcomm.qti.gaiaclient.ui.settings.download.DatePreference
            app:iconSpaceReserved="false"
            app:key="@string/settings_id_download_created_after"
            app:title="@string/settings_download_created_after_title" />

        <MultiSelectListPreference
            app:iconSpaceReserved="false"
            app:dialogTitle="@string/settings_download_filter_include_tags_dialog_title"
            app:key="@string/settings_id_download_include_tags"
            app:title="@string/settings_download_filter_include_tags_title" />

        <MultiSelectListPreference
            app:iconSpaceReserved="false"
            app:dialogTitle="@string/settings_download_filter_exclude_tags_dialog_title"
            app:key="@string/settings_id_download_exclude_tags"
            app:title="@string/settings_download_filter_exclude_tags_title" />

    </PreferenceCategory>

    <com.qualcomm.qti.gaiaclient.ui.settings.common.ButtonPreference
        app:allowDividerAbove="true"
        app:iconSpaceReserved="false"
        app:key="@string/settings_id_download_continue"
        app:title="@string/settings_download_continue" />

</PreferenceScreen>
