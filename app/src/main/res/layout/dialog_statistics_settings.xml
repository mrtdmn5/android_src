<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rate"
            type="com.qualcomm.qti.gaiaclient.ui.settings.statistics.category.RefreshRate" />

        <variable
            name="bounds"
            type="com.qualcomm.qti.gaiaclient.ui.settings.statistics.category.RefreshRateBounds" />

        <variable
            name="isRecording"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/default_margin_one_and_half" >

        <TextView
            android:id="@+id/refresh_rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_one_and_half"
            android:text="@string/statistic_refresh_rate_label"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="?android:attr/textAppearanceListItem"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/refresh_rate_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin_one_and_half"
            android:text="@{String.format(@string/statistic_refresh_rate_value, rate.rateInSeconds)}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/refresh_rate_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.slider.Slider
            android:id="@+id/refresh_rate_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="18dp"
            android:valueFrom="@{bounds == null ? 0f : bounds.minimum}"
            android:valueTo="@{bounds == null ? 100f : bounds.maximum}"
            android:value="@{rate == null ? 50f : rate.rateInMilliseconds}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refresh_rate_title"  />

        <Button
            android:id="@+id/record_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/statistics_action_button_background_color_selector"
            android:text="@{isRecording ? @string/statistic_stop_recording : @string/statistic_start_recording}"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="@dimen/default_margin_one_and_half"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refresh_rate_slider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
