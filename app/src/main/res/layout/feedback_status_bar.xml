<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.qualcomm.qti.gaiaclient.ui.feedback.FeedbackStatus" />

        <variable
            name="viewModel"
            type="com.qualcomm.qti.gaiaclient.ui.feedback.SendFeedbackViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_list_item_min"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/feedback_status_bar_background">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:indeterminate="true"
            android:visibility="@{data.progress ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_double"
            android:layout_marginEnd="@dimen/default_margin_double"
            android:layout_marginBottom="@dimen/default_margin_one_and_half"
            android:maxLines="1"
            android:text="@{data.title ?? @string/feedback_sending}"
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content"
            style="@style/AppTheme.Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/no_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:text="@{data.content}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/refs"
            style="@style/AppTheme.Text.Refs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/no_margin"
            android:visibility="@{data.refs == null || data.refs.isEmpty() ? View.GONE : View.VISIBLE}"
            android:text="@{String.format(@string/default_refs, data.refs)}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <Button
            android:id="@+id/secondary_action"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin_double"
            android:onClick="@{() -> viewModel.onClick(data.actions.secondary)}"
            android:text="@{data.actions.secondary.label}"
            android:visibility="@{data.actions.secondary != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/primary_action"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/refs" />

        <Button
            android:id="@+id/primary_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/no_margin"
            android:layout_marginBottom="@dimen/default_margin_double"
            android:onClick="@{() -> viewModel.onClick(data.actions.primary)}"
            android:text="@{data.actions.primary.label}"
            android:visibility="@{data.actions.primary != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toEndOf="@+id/secondary_action"
            app:layout_constraintTop_toBottomOf="@id/refs" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/feedback_progress_indicator_size"
            android:layout_height="@dimen/feedback_progress_indicator_size"
            android:contentDescription="@{data.error ? @string/cont_desc_feedback_progress_error : @string/cont_desc_feedback_progress_success}"
            android:src="@{data.error ? @drawable/ic_warning_40dp : @drawable/ic_check}"
            android:visibility="@{data.success || data.error ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/refs"
            app:layout_constraintEnd_toEndOf="@id/progress"
            app:layout_constraintStart_toStartOf="@id/progress"
            app:layout_constraintTop_toTopOf="@id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
