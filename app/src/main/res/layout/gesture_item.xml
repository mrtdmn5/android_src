<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="gesture"
            type="com.qualcomm.qti.gaiaclient.ui.gestures.gestures.GestureViewData" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@{gesture.image.contentDescription}"
        android:minHeight="@dimen/height_list_item_min"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_gesture_image"
            android:layout_height="@dimen/height_gesture_image"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin_half"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:contentDescription="@{gesture.image.contentDescription}"
            android:src="@drawable/ic_tap"
            android:visibility="@{gesture.image == null ? View.INVISIBLE : View.VISIBLE}"
            app:imageResource="@{gesture.image.resourceId}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_margin_half"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gesture_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/no_margin"
                android:text="@{gesture.name}"
                android:textAppearance="?android:attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/gesture_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/no_margin"
                android:singleLine="false"
                android:text="@{gesture.summary}"
                android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                android:textColor="?android:attr/textColorSecondary"
                android:visibility="@{gesture.summary == null ? View.GONE : View.VISIBLE}" />

        </LinearLayout>

    </LinearLayout>

</layout>
