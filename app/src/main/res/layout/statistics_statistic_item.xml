<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />

        <variable
            name="data"
            type="com.qualcomm.qti.gaiaclient.ui.settings.statistics.category.StatisticViewData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_list_item_min"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_half">

        <TextView
            android:id="@+id/statistic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/statistic_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.subtitle}"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</layout>
