<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavigationStyle</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="tabStyle">@style/AppTheme.TabLayout</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
    </style>

    <style name="AppThemeOverlay.Toolbar" parent="">
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorOnPrimary">@color/colorOnToolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/AppThemeOverlay.Toolbar</item>
    </style>

    <style name="AppTheme.BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/AppThemeOverlay.Toolbar</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="AppTheme.Text.Subtitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/title_medium_emphasis</item>
    </style>

    <style name="AppTheme.Text.Message">
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="AppTheme.Text.Secondary">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/text_light_emphasis</item>
    </style>

    <style name="AppTheme.Text.Refs">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="AppTheme.Text.List" />

    <style name="AppTheme.Text.List.Title">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/title_high_emphasis</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.List.Secondary">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="AppTheme.RingProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.RingProgressBar.Tone1">
        <item name="android:progressDrawable">@drawable/ring_progress_tone_1</item>
    </style>

    <style name="AppTheme.RingProgressBar.Tone2">
        <item name="android:progressDrawable">@drawable/ring_progress_tone_2</item>
    </style>

    <style name="AppTheme.Text.SliderLabel">
        <item name="android:textSize">@dimen/eq_label_text_size</item>
        <item name="android:textColor">@color/vertical_slider_label</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored" />

    <style name="AppTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.SliderLabelButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/eq_label_text_size</item>
        <item name="android:paddingLeft">@dimen/eq_label_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/eq_label_button_horizontal_padding</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Text.File" />

    <style name="AppTheme.Text.File.Title">
        <item name="android:textColor">@color/title_high_emphasis</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.File.Tags">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

</resources>
